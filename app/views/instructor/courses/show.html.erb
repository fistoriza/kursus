<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <div class="offset-4">
    <%= link_to 'Preview as Student...', course_path(@course), class: 'btn btn-warning' %>
    <%= link_to 'Add a new section...', new_instructor_course_section_path(@course), class: 'btn btn-primary' %>
  </div>
  <br />

  <ul>
    <% @course.sections.each do |section| %>
      <li>
        <h3><%= section.title %></h3>
      </li>
    <% end %>
  </ul>
</div>